<Page
    x:Class="GoodNight_Test_0.timePointList_addPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GoodNight_Test_0"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Width="400">
                <TextBox Name="__name" FontSize="26" Margin="12,8,20,12" Width="140" Padding="0,8,0,0"  />
                <TimePicker Name="__time" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <CheckBox IsChecked="False" Name="__is_work" Margin="45,0,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="confirm" Content="确认" Margin="0,0,20,0" Click="confirm_Click"></Button>
                <Button Name="cancel" Content="取消" Margin="20,0,0,0" Click="cancel_Click"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
